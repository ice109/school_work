\begin_inset Formula $R=X_{\left(n\right)}-X_{\left(1\right)}$
\end_inset

 
\begin_inset Formula 
\begin{align*}
aR & =a\left(X_{\left(n\right)}-X_{\left(1\right)}\right)\\
 & =aX_{\left(n\right)}-b+b-aX_{\left(1\right)}\\
 & =\left(aX_{\left(n\right)}-b\right)-\left(aX_{\left(1\right)}-b\right)=R\left(\left(aX_{\left(n\right)}-b\right),\left(aX_{\left(1\right)}-b\right)\right)
\end{align*}

\end_inset

and 
\begin_inset Formula $S=\sqrt{\frac{1}{n-1}\sum_{i=1}^{n}\left(X_{i}-\bar{X}\right)^{2}}$
\end_inset


\begin_inset Formula 
\begin{align*}
aS & =a\sqrt{\frac{1}{n-1}\sum_{i=1}^{n}\left(X_{i}-\bar{X}\right)^{2}}\\
 & =\sqrt{\frac{a^{2}}{n-1}\sum_{i=1}^{n}\left(X_{i}-\bar{X}\right)^{2}}\\
 & =\sqrt{\frac{1}{n-1}\sum_{i=1}^{n}\left(\left(aX_{i}-b\right)-\left(a\bar{X}-b\right)\right)^{2}}\\
 & =S\left(\left(aX_{i}-b\right),\dots,\left(aX_{n}-b\right)\right)
\end{align*}

\end_inset


\end_layout

\end_deeper
\end_body
