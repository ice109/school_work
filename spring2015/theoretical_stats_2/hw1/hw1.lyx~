\begin_inset ERT
status open

\begin_layout Plain Layout

[6.20]
\end_layout

\end_inset


\end_layout

\begin_deeper
\begin_layout Enumerate
If 
\begin_inset Formula 
\[
f_{X}\left(x|\theta\right)=\frac{2x}{\theta^{2}}I\left(x\right)_{\left(0,\theta\right)}\text{ for }\theta>0
\]

\end_inset

then
\begin_inset Formula 
\begin{align*}
f_{\mathbf{X}}\left(\mathbf{x}|\theta\right) & =\frac{2^{n}\left(\prod_{i=1}^{n}x_{i}\right)}{\theta^{2n}}I\left(\max_{i}\left(x_{i}\right)\right)_{\left(0,\theta\right)}\text{ for }\theta>0
\end{align*}

\end_inset

Therefore
\begin_inset Formula $\max_{i}\left(X_{i}\right)$
\end_inset

 is a sufficient statistic.
 To see that it's minimal suppose we have two 
\begin_inset Formula $\mathbf{x}$
\end_inset

 and 
\begin_inset Formula $\mathbf{y}$
\end_inset

 are two observations such that 
\begin_inset Formula $\max_{i}\left(x_{i}\right)=\max_{i}\left(y_{i}\right)$
\end_inset

 then
\begin_inset Formula 
\begin{align*}
\frac{f_{\mathbf{X}}\left(\mathbf{x}|\theta\right)}{f_{\mathbf{X}}\left(\mathbf{y}|\theta\right)} & =\frac{\frac{2^{n}\left(\prod_{i=1}^{n}x_{i}\right)}{\theta^{2n}}}{\frac{2^{n}\left(\prod_{i=1}^{n}y_{i}\right)}{\theta^{2n}}}\frac{I\left(\max_{i}\left(x_{i}\right)\right)_{\left(0,\theta\right)}}{I\left(\max_{i}\left(y_{i}\right)\right)_{\left(0,\theta\right)}}\text{ for }\theta>0\\
 & =\frac{\left(\prod_{i=1}^{n}x_{i}\right)}{\left(\prod_{i=1}^{n}y_{i}\right)}\text{ for }\theta>0\\
 & \perp\theta\text{ for }\theta>0
\end{align*}

\end_inset

To see that it's complete note that for 
\begin_inset Formula $Y\sim\max_{i}\left(X_{i}\right)$
\end_inset


\begin_inset Formula 
\begin{align*}
f_{Y}\left(y\right) & =f_{X_{\left(n\right)}}\left(y\right)\\
 & =\frac{n!}{\left(n-1\right)!\left(n-n\right)!}\frac{2y}{\theta^{2}}I\left(y\right)_{\left(0,\theta\right)}\left[\int_{0}^{y}\frac{2x}{\theta^{2}}dx\right]^{n-1}\\
 & =\frac{2ny}{\theta^{2}}I\left(y\right)_{\left(0,\theta\right)}\left[\frac{y^{2}}{\theta^{2}}\right]^{n-1}\\
 & =\frac{2ny^{2n-1}}{\theta^{2n}}I\left(y\right)_{\left(0,\theta\right)}
\end{align*}

\end_inset

and assume that 
\begin_inset Formula $E_{\theta}g\left(y\right)=0$
\end_inset

 for all 
\begin_inset Formula $g$
\end_inset

.
 Then
\begin_inset Formula 
\begin{align*}
0 & =E_{\theta}g\left(y\right)\\
 & =\int_{0}^{\theta}g\left(y\right)\frac{2ny^{2n-1}}{\theta^{2n}}dy\\
 & =\frac{2n}{\theta^{2n}}\int_{0}^{\theta}g\left(y\right)y^{2n-1}dy
\end{align*}

\end_inset

Finally since 
\begin_inset Formula 
\[
\frac{d}{dy}E_{\theta}g\left(y\right)\propto g\left(\theta\right)\theta^{2n-1}\propto\text{ for }\theta>0
\]

\end_inset

this shows that 
\begin_inset Formula $g\left(\theta\right)\propto0$
\end_inset

 for 
\begin_inset Formula $\theta>0$
\end_inset

.
\end_layout

\begin_layout Enumerate
If 
\begin_inset Formula 
\[
f_{X}\left(x|\theta\right)=\frac{\theta}{\left(1+x\right)^{1+\theta}}I\left(x\right)_{\left(0,\infty\right)}\text{ for }\theta>0
\]

\end_inset

then
\begin_inset Formula 
\begin{align*}
f_{\mathbf{X}}\left(\mathbf{x}|\theta\right) & =\frac{\theta^{n}}{\prod_{i=1}^{n}\left(1+x_{i}\right)\left(\prod_{i=1}^{n}\left(1+x_{i}\right)\right)^{\theta}}I\left(\bm{x}\right)_{\mathbb{R}^{n}}\text{ for }\theta>0\\
 & =\frac{I\left(\bm{x}\right)_{\mathbb{R}^{n}}}{\prod_{i=1}^{n}\left(1+x_{i}\right)}\theta^{n}e^{-\theta\log\left(\prod_{i=1}^{n}\left(1+x_{i}\right)\right)}\text{ for }\theta>0\\
 & =\frac{I\left(\bm{x}\right)_{\mathbb{R}^{n}}}{\prod_{i=1}^{n}\left(1+x_{i}\right)}\theta^{n}e^{-\theta\sum_{i=1}^{n}\log\left(1+x_{i}\right)}\text{ for }\theta>0
\end{align*}

\end_inset

Therefore
\begin_inset Formula $\sum_{i=1}^{n}\log\left(1+X_{i}\right)$
\end_inset

 is a complete sufficient statistic.
 
\end_layout

\begin_layout Enumerate
It's the case that 
\begin_inset Formula 
\begin{align*}
f_{X}\left(x|\theta\right) & =\frac{\log\left(\theta\right)\theta^{x}}{\theta-1}I\left(x\right)_{\left(0,1\right)}\text{ for }\theta>1\\
 & =\frac{\log\left(\theta\right)e^{\theta\log x}}{\theta-1}I\left(x\right)_{\left(0,1\right)}\text{ for }\theta>1
\end{align*}

\end_inset

so 
\begin_inset Formula $X$
\end_inset

 is a random variable from an exponential family
\begin_inset Formula 
\[
f\left(x|\theta\right)=h\left(x\right)c\left(\theta\right)e\left(\sum_{j=1}^{k}w_{j}\left(\theta\right)t_{j}\left(x\right)\right)
\]

\end_inset

where 
\begin_inset Formula 
\begin{align*}
h\left(x\right) & =I\left(x\right)_{\left(0,1\right)}\\
c\left(\theta\right) & =\frac{\log\theta}{\theta-1}\\
w_{1}\left(\theta\right) & =\theta\\
t_{1}\left(x\right) & =\log x
\end{align*}

\end_inset

and noting that 
\begin_inset Formula $w_{1}\left(y\right)=1\times y$
\end_inset

 is continuous and invertible on 
\begin_inset Formula $\left(1,\infty\right)$
\end_inset

 by Thm 6.2.25 
\begin_inset Formula $T\left(\mathbf{X}\right)=\sum_{i=1}^{n}\log\left(x_{i}\right)$
\end_inset

 is complete for 
\begin_inset Formula $\theta$
\end_inset

.
\begin_inset Newline newline
\end_inset


\begin_inset Newline newline
\end_inset


\series bold
Lemma
\series default
: If 
\begin_inset Formula $T\left(\mathbf{X}\right)$
\end_inset

 is sufficient and 
\begin_inset Formula $g\left(T\left(\mathbf{X}\right)\right)\not\equiv0$
\end_inset

 is ancillary then 
\begin_inset Formula $T\left(\mathbf{X}\right)$
\end_inset

 is not complete.
\begin_inset Newline newline
\end_inset


\series bold
Proof: 
\series default
Assume 
\begin_inset Formula $T\left(\mathbf{X}\right)$
\end_inset

 is sufficient and that there exists 
\begin_inset Formula $g$
\end_inset

 such that 
\begin_inset Formula $g\left(T\left(\mathbf{X}\right)\right)$
\end_inset

 is ancillary.
 Then 
\begin_inset Formula $g\left(T\left(\mathbf{X}\right)\right)\perp\theta$
\end_inset

 and so 
\begin_inset Formula $e=E\left(g\left(T\left(\mathbf{X}\right)\right)\right)\perp\theta$
\end_inset

.
 Let 
\begin_inset Formula $g'\left(T\left(\mathbf{X}\right)\right)=g\left(T\left(\mathbf{X}\right)\right)-e$
\end_inset

 and obviously 
\begin_inset Formula 
\[
E\left(g'\left(T\left(\mathbf{X}\right)\right)\right)=0
\]

\end_inset

 and yet 
\family roman
\series medium
\shape up
\size normal
\emph off
\bar no
\strikeout off
\uuline off
\uwave off
\noun off
\color none

\begin_inset Formula $g'\left(T\left(\mathbf{X}\right)\right)\not\equiv0$
\end_inset

.
 Hence 
\begin_inset Formula $T\left(\mathbf{X}\right)$
\end_inset

 is not complete.
\end_layout

