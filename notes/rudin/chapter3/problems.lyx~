\begin_body

\begin_layout Section*
p=2
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray*}
x_{n+1} & = & \frac{1}{2}x_{n}+\frac{\alpha}{2x_{n}}
\end{eqnarray*}

\end_inset

assuming 
\begin_inset Formula $x_{0}>\sqrt{\alpha}$
\end_inset

 we have 
\begin_inset Formula 
\begin{eqnarray*}
x_{1}-\sqrt{\alpha} & = & \frac{1}{2}x_{0}+\frac{\alpha}{2x_{0}}-\sqrt{\alpha}\\
 & = & \frac{1}{2x_{0}}\left(x_{0}^{2}+\alpha-2x_{0}\sqrt{\alpha}\right)\\
 & = & \frac{1}{2x_{0}}\left(x_{0}-\sqrt{\alpha}\right)^{2}>0
\end{eqnarray*}

\end_inset


\begin_inset Formula 
\begin{eqnarray*}
x_{n+1}-\sqrt{\alpha} & = & \frac{1}{2x_{n}}\left(x_{n}-\sqrt{\alpha}\right)^{2}>0
\end{eqnarray*}

\end_inset

and 
\begin_inset Formula 
\begin{eqnarray*}
x_{n+1}-x_{n} & = & \frac{1}{2}x_{n}+\frac{\alpha}{2x_{n}}-x_{n}\\
 & = & \frac{\alpha}{2x_{n}}-\frac{1}{2}x_{n}\\
 & = & \frac{1}{2}\left(\frac{\alpha}{x_{n}}-x_{n}\right)\\
 & = & \frac{1}{2x_{n}}\left(\alpha-x_{n}^{2}\right)<0
\end{eqnarray*}

\end_inset

Therefore monotonic decreasing and bounded below by 
\begin_inset Formula $\sqrt{\alpha}$
\end_inset


\end_layout

\begin_layout Section*
Arbitrary p
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray*}
x_{n+1} & = & \frac{p-1}{p}x_{n}+\frac{\alpha}{px_{n}^{p-1}}
\end{eqnarray*}

\end_inset

Let 
\begin_inset Formula $\beta=\sqrt[p]{\alpha}$
\end_inset

.
 Assume 
\begin_inset Formula $x_{0}>\beta$
\end_inset

 then 
\begin_inset Formula 
\begin{eqnarray*}
x_{1}-\beta & = & \frac{p-1}{p}x_{0}+\frac{\beta^{p}}{px_{0}^{p-1}}-\beta\\
 & = & \frac{1}{px_{0}^{p-1}}\left(\left(p-1\right)x_{0}^{p}+\beta^{p}-px_{0}^{p-1}\beta\right)\\
 & = & \frac{1}{\beta^{p}px_{0}^{p-1}}\left(\left(p-1\right)\left(\frac{x_{0}}{\beta}\right)^{p}-p\left(\frac{x_{0}}{\beta}\right)^{p-1}+1\right)
\end{eqnarray*}

\end_inset

Let 
\begin_inset Formula $\gamma=x_{0}/\beta$
\end_inset

 and 
\begin_inset Formula $\xi=1/\left(\beta^{p}px_{0}^{p-1}\right)$
\end_inset

.
\begin_inset Formula 
\begin{eqnarray*}
x_{1}-\beta & = & \xi\left(\left(p-1\right)\gamma^{p}-p\gamma^{p-1}+1\right)
\end{eqnarray*}

\end_inset

Is
\begin_inset Formula 
\[
\left(p-1\right)\gamma^{p}-p\gamma^{p-1}+1>0
\]

\end_inset

? Definitely if 
\begin_inset Formula 
\begin{eqnarray*}
\left(p-1\right)\gamma^{p}-p\gamma^{p-1} & > & 0\\
\left(p-1\right)\gamma^{p} & > & p\gamma^{p-1}\\
\frac{p-1}{p}\gamma & > & 1\\
\frac{p-1}{p}\frac{x_{0}}{\sqrt{\alpha}} & > & 1
\end{eqnarray*}

\end_inset

since 
\begin_inset Formula $\left(x_{0}+\sqrt[p]{\alpha}\right)^{p}=x_{0}^{p}+\cdots+px_{0}^{p-1}\sqrt[p]{\alpha}+\alpha$
\end_inset

 and so 
\begin_inset Formula $\left(x_{0}+\sqrt[p]{\alpha}\right)^{p}\leq x_{0}^{p}+px_{0}^{p-1}\sqrt[p]{\alpha}+\alpha$
\end_inset

.
 And so
\begin_inset Formula 
\[
\left(x_{0}+\left(-\sqrt[p]{\alpha}\right)\right)^{p}\leq x_{0}^{p}+px_{0}^{p-1}\left(-\sqrt[p]{\alpha}\right)+\left(-\sqrt[p]{\alpha}\right)^{p}
\]

\end_inset

If 
\begin_inset Formula $p$
\end_inset

 is odd then 
\begin_inset Formula 
\[
\left(x_{0}+\left(-\sqrt[p]{\alpha}\right)\right)^{p}\leq x_{0}^{p}-px_{0}^{p-1}\sqrt[p]{\alpha}-\alpha
\]

\end_inset

If 
\begin_inset Formula $p$
\end_inset

 is even then
\begin_inset Formula 
\[
\left(x_{0}+\left(-\sqrt[p]{\alpha}\right)\right)^{p}\leq x_{0}^{p}-px_{0}^{p-1}\sqrt[p]{\alpha}+\alpha
\]

\end_inset


\begin_inset Formula 
\begin{eqnarray*}
\frac{x_{1}}{\sqrt[p]{\alpha}} & = & \frac{p-1}{p}\frac{x_{0}}{\sqrt[p]{\alpha}}+\frac{\alpha}{\sqrt[p]{\alpha}px_{0}^{p-1}}\\
 & = & \frac{1}{x_{0}^{p-1}p\sqrt[p]{\alpha}}\left(\left(p-1\right)x_{0}^{p}+\alpha\right)\\
 & > & \frac{1}{px_{0}^{p-1}}\left(x_{0}-\sqrt[p]{\alpha}\right)^{p}>0
\end{eqnarray*}

\end_inset


\end_layout

\end_body
