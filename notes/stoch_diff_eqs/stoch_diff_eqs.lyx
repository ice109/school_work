\begin_layout Standard
Envisage the same one dimensional random walk on 
\begin_inset Formula $\mathbb{Z}$
\end_inset

, with spatial increments 
\begin_inset Formula $\Delta x$
\end_inset

 and time increments 
\begin_inset Formula $\Delta t$
\end_inset

.
 Let 
\begin_inset Formula $X_{i}$
\end_inset

 be Bernoulli random variables iid with 
\begin_inset Formula 
\[
P\left(X_{i}=0\right)=\frac{1}{2}\:\text{and}\:P\left(X_{i}=1\right)=\frac{1}{2}
\]

\end_inset

Then 
\begin_inset Formula $\text{Var}\left(X_{i}\right)=\frac{1}{4}$
\end_inset

.
 Define 
\begin_inset Formula 
\[
S_{n}\coloneqq\sum_{i=1}^{n}X_{i}
\]

\end_inset


\begin_inset Formula $S_{n}$
\end_inset

 is the number of steps to the right (not the distance but just the number
 of steps).
 Note that by iid 
\begin_inset Formula 
\[
ES_{n}=\sum_{i=1}^{n}EX_{i}=\frac{n}{2}
\]

\end_inset

Then let 
\begin_inset Formula 
\[
X\left(n\Delta t\right)\coloneqq\underbrace{S_{n}\Delta x}_{\text{positive dist}}-\underbrace{\left(n-S_{n}\right)\left(-\Delta x\right)}_{\text{negative dist}}=\left(2S_{n}-n\right)\Delta x
\]

\end_inset

i.e.
 the position of the particle at time 
\begin_inset Formula $n\Delta t$
\end_inset

.
 Then
\begin_inset Formula 
\begin{eqnarray*}
\text{Var}\left(X\left(n\Delta t\right)\right) & = & \text{Var}\left(\left(2S_{n}-n\right)\Delta x\right)\\
 & = & \left(\Delta x\right)^{2}\text{Var}\left(\left(2S_{n}-n\right)\right)\\
 & = & 4\left(\Delta x\right)^{2}\text{Var}\left(S_{n}\right)\\
 & = & 4\left(\Delta x\right)^{2}\text{Var}\left(\sum_{i=1}^{n}X_{i}\right)\\
 & \text{} & X_{i}\text{ iid }\Rightarrow\\
 & = & 4\left(\Delta x\right)^{2}n\text{Var}\left(X_{i}\right)\\
 & = & \left(\Delta x\right)^{2}n=\frac{\left(\Delta x\right)^{2}}{\Delta t}t=Dt
\end{eqnarray*}

\end_inset

and 
\begin_inset Formula 
\begin{eqnarray*}
X\left(n\Delta t\right) & = & \left(2S_{n}-n\right)\Delta x\\
 & = & \sqrt{n}\Delta x\left(\frac{S_{n}-\frac{n}{2}}{\sqrt{n/4}}\right)\\
 & = & \sqrt{Dt}\left(\frac{S_{n}-\frac{n}{2}}{\sqrt{n/4}}\right)\\
 & = & \sqrt{Dt}\left(\frac{\left(\sum_{i=1}^{n}X_{i}\right)-\frac{n}{2}}{\sqrt{n/4}}\right)\\
 & = & \sqrt{Dt}n\left(\frac{\frac{1}{n}\left(\sum_{i=1}^{n}X_{i}\right)-\frac{1}{2}}{\sqrt{n/4}}\right)\\
 & = & \sqrt{Dt}\left[\left(\frac{\frac{1}{n}\left(\sum_{i=1}^{n}X_{i}\right)-\frac{1}{2}}{\sqrt{1/4}/\sqrt{n}}\right)\right]
\end{eqnarray*}

\end_inset

The CLT
\begin_inset Foot
status open

\begin_layout Plain Layout
Actually a weaker theorem called Laplace-De Moivre.
\end_layout

\end_inset

 with 
\begin_inset Formula 
\[
\sqrt{Dt}\left[\left(\frac{\frac{1}{n}\sum_{i=1}^{n}X_{i}-\frac{1}{2}}{\sqrt{1/4}/\sqrt{n}}\right)\right]=\sqrt{Dt}\left[\left(\frac{\bar{X}-EX_{i}}{\sigma_{X}/\sqrt{n}}\right)\right]
\]

\end_inset

implies that 
\begin_inset Formula 
\begin{eqnarray*}
\lim_{n\rightarrow\infty}P\left(a\leq\sqrt{Dt}X\left(t\right)\leq b\right) & = & \lim_{n\rightarrow\infty}P\left(a\leq\sqrt{Dt}X\left(t\right)\leq b\right)\\
 & = & \frac{1}{\sqrt{2\pi}}\int_{\frac{a}{\sqrt{Dt}}}^{\frac{b}{\sqrt{Dt}}}e^{-\frac{x^{2}}{2}}dx\\
 & = & \frac{1}{\sqrt{2\pi Dt}}\int_{a}^{b}e^{-\frac{x^{2}}{2Dt}}dx
\end{eqnarray*}

\end_inset

So again 
\begin_inset Formula $X\left(t\right)\sim\text{n}\left(0,Dt\right)$
\end_inset

.
\end_layout

\begin_layout Subsection
