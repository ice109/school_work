\end_inset


\end_layout

\begin_deeper
\begin_layout Enumerate
\begin_inset Formula $X|P\sim\text{binomial}\left(n,P\right)$
\end_inset

 and 
\begin_inset Formula $P\sim\text{beta}\left(\alpha,\beta\right)$
\end_inset

 then
\begin_inset Formula 
\begin{align*}
E\left(X\right) & =E\left(E\left(X|P\right)\right)\\
 & =E\left(nP\right)\\
 & =\frac{n\alpha}{\alpha+\beta}
\end{align*}

\end_inset

and
\begin_inset Formula 
\begin{align*}
\text{Var}\left(X\right) & =\text{Var}\left(E\left(X|P\right)\right)+E\left(\text{Var}\left(X|P\right)\right)\\
 & =\text{Var}\left(nP\right)+E\left(nP\left(1-P\right)\right)\\
 & =\text{Var}\left(nP\right)+n\left(E\left(P\right)-E\left(P\right)^{2}-\text{Var}\left(P\right)\right)\\
 & =n^{2}\text{Var}\left(P\right)-n\text{Var}\left(P\right)+nE\left(P\right)\left(1-E\left(P\right)\right)
\end{align*}

\end_inset


\end_layout

\begin_layout Enumerate
If 
\begin_inset Formula $Y|\Lambda\sim\text{Poisson}\left(\Lambda\right)$
\end_inset

 and 
\begin_inset Formula $\Lambda\sim\Gamma\left(\alpha,\beta\right)$
\end_inset

 then
\begin_inset Formula 
\begin{align*}
E\left(Y\right) & =E\left(E\left(Y|\Lambda\right)\right)\\
 & =E\left(\Lambda\right)\\
 & =\alpha\beta
\end{align*}

\end_inset

and
\begin_inset Formula 
\begin{align*}
\text{Var}\left(Y\right) & =\text{Var}\left(E\left(Y|\Lambda\right)\right)+E\left(\text{Var}\left(Y|\Lambda\right)\right)\\
 & =\text{Var}\left(\Lambda\right)+E\left(\Lambda\right)=\alpha\beta^{2}+\alpha\beta=\frac{\left(\alpha\beta\right)^{2}}{\alpha}+\alpha\beta
\end{align*}

\end_inset


\end_layout

\end_deeper
\begin_layout Enumerate
\begin_inset ERT
status open

\begin_layout Plain Layout

[4.36]
\end_layout

\end_inset


\end_layout

\begin_deeper
\begin_layout Enumerate
Let 
\begin_inset Formula $X_{i}\big|P_{i}\sim\text{Bernoulli}\left(P_{i}\right)$
\end_inset

 and 
\begin_inset Formula $P_{i}\sim\text{beta}\left(\alpha,\beta\right)$
\end_inset

.
 Then 
\begin_inset Formula 
\begin{align*}
E\left(Y\right) & =E\left(E\left(Y\bigg|\mathbf{P}\right)\right)\\
 & =E\left(E\left(X_{1}+X_{2}+\cdots+X_{n}\big|\mathbf{P}\right)\right)\\
 & =E\left(\sum_{i=1}^{n}E\left(X_{i}|P_{i}\right)\right)\\
 & =\sum_{i=1}^{n}E\left(E\left(X_{i}|P_{i}\right)\right)\\
 & =\sum_{i=1}^{n}E\left(P_{i}\right)\\
 & =\sum_{i=1}^{n}\frac{\alpha}{\alpha+\beta}\\
 & =\frac{n\alpha}{\alpha+\beta}
\end{align*}

\end_inset


\end_layout

\begin_layout Enumerate
The variance is
\begin_inset Formula 
\begin{align*}
\text{Var}\left(Y\right) & =\text{Var}\left(E\left(Y|\mathbf{P}\right)\right)+E\left(\text{Var}\left(Y|\mathbf{P}\right)\right)\\
 & =\text{Var}\left(\sum_{i=1}^{n}E\left(X_{i}|P_{i}\right)\right)+E\left(\text{Var}\left(\sum_{i=1}^{n}X_{i}|P_{i}\right)\right)\\
 & =\text{Var}\left(\sum_{i=1}^{n}E\left(X_{i}|P_{i}\right)\right)+E\left(\sum_{i=1}^{n}\text{Var}\left(X_{i}|P_{i}\right)\right)\\
 & =\sum_{i=1}^{n}\text{Var}\left(E\left(X_{i}|P_{i}\right)\right)+\sum_{i=1}^{n}E\left(\text{Var}\left(X_{i}|P_{i}\right)\right)\\
 & =\sum_{i=1}^{n}\text{Var}\left(P_{i}\right)+\sum_{i=1}^{n}E\left(P_{i}\left(1-P_{i}\right)\right)\\
 & =\sum_{i=1}^{n}\text{Var}\left(P_{i}\right)+\sum_{i=1}^{n}\left(E\left(P_{i}\right)-E\left(P_{i}\right)^{2}-\text{Var}\left(P_{i}\right)\right)\\
 & =\sum_{i=1}^{n}\left(E\left(P_{i}\right)-E\left(P_{i}\right)^{2}\right)\\
 & =\sum_{i=1}^{n}\left(\frac{\alpha}{\alpha+\beta}-\left(\frac{\alpha}{\alpha+\beta}\right)^{2}\right)\\
 & =n\left(\frac{\alpha}{\alpha+\beta}-\left(\frac{\alpha}{\alpha+\beta}\right)^{2}\right)=\frac{n\alpha\beta}{\left(\alpha+\beta\right)^{2}}
\end{align*}

\end_inset

Using MGFs
\begin_inset Formula 
\begin{align*}
E\left(e^{tY}\right) & =E\left(E\left(e^{tY}\bigg|\mathbf{P}\right)\right)\\
 & =E\left(E\left(e^{t\sum_{i=1}^{n}X_{i}}\bigg|\mathbf{P}\right)\right)\\
 & =E\left(\prod_{i=1}^{n}E\left(e^{tX_{i}}\bigg|P_{i}\right)\right)\\
 & =E\left(\prod_{i=1}^{n}\left(\left(1-P_{i}\right)+P_{i}e^{t}\right)\right)\\
 & \text{by independence of }P_{i}\\
 & =\prod_{i=1}^{n}E\left(\left(1-P_{i}\right)+P_{i}e^{t}\right)\\
 & =\prod_{i=1}^{n}\left(\left(1-\frac{\alpha}{\alpha+\beta}\right)+\frac{\alpha}{\alpha+\beta}e^{t}\right)\\
 & =\left(\left(1-\frac{\alpha}{\alpha+\beta}\right)+\frac{\alpha}{\alpha+\beta}e^{t}\right)^{n}\\
 & =\left(\left(1-\frac{\alpha}{\alpha+\beta}\right)+\frac{\alpha}{\alpha+\beta}e^{t}\right)^{n}
\end{align*}

\end_inset

So 
\begin_inset Formula $Y\sim\text{Binomial}\left(n,\frac{\alpha}{\alpha+\beta}\right)$
\end_inset

.
\end_layout

\begin_layout Enumerate
Let 
\begin_inset Formula $X_{i}\big|P_{i}\sim\text{Binomial}\left(n_{i},P_{i}\right)$
\end_inset

 and 
\begin_inset Formula $P_{i}\sim\text{beta}\left(\alpha,\beta\right)$
\end_inset

.
 Then 
\begin_inset Formula 
\begin{align*}
E\left(Y\right) & =E\left(E\left(Y\bigg|\mathbf{n,P}\right)\right)\\
 & =E\left(E\left(X_{1}+X_{2}+\cdots+X_{k}\big|\mathbf{n,P}\right)\right)\\
 & =E\left(\sum_{i=1}^{k}E\left(X_{i}|n_{i},P_{i}\right)\right)\\
 & =\sum_{i=1}^{k}E\left(E\left(X_{i}|n_{i},P_{i}\right)\right)\\
 & =\sum_{i=1}^{k}E\left(n_{i}P_{i}\right)\\
 & =\sum_{i=1}^{k}n_{i}\frac{\alpha}{\alpha+\beta}\\
 & =\frac{\alpha}{\alpha+\beta}\sum_{i=1}^{k}n_{i}
\end{align*}

\end_inset

and the variance is
\begin_inset Formula 
\begin{align*}
\text{Var}\left(Y\right) & =\text{Var}\left(E\left(Y\bigg|\mathbf{n,P}\right)\right)+E\left(\text{Var}\left(Y\bigg|\mathbf{n,P}\right)\right)\\
 & =\text{Var}\left(\sum_{i=1}^{k}E\left(X_{i}|n_{i},P_{i}\right)\right)+E\left(\text{Var}\left(\sum_{i=1}^{k}X_{i}|n_{i},P_{i}\right)\right)\\
 & =\sum_{i=1}^{k}\text{Var}\left(E\left(X_{i}|n_{i},P_{i}\right)\right)+E\left(\sum_{i=1}^{k}\text{Var}\left(X_{i}|n_{i},P_{i}\right)\right)\\
 & =\sum_{i=1}^{k}\text{Var}\left(n_{i}P_{i}\right)+\sum_{i=1}^{k}E\left(n_{i}P_{i}\left(1-P_{i}\right)\right)\\
 & =\sum_{i=1}^{k}n_{i}^{2}\text{Var}\left(P_{i}\right)+\sum_{i=1}^{k}n_{i}\left(E\left(P_{i}\right)-E\left(P_{i}\right)^{2}\text{-Var}\left(n_{i}P_{i}\right)\right)\\
 & =\sum_{i=1}^{k}n_{i}\left(E\left(P_{i}\right)-E\left(P_{i}\right)^{2}\right)=\sum_{i=1}^{k}n_{i}\left(P_{i}-P_{i}^{2}\right)\\
 & =\sum_{i=1}^{k}n_{i}P_{i}\left(1-P_{i}\right)=\sum_{i=1}^{k}\text{Var}\left(X_{i}\right)
\end{align*}

\end_inset


\end_layout

\end_deeper
\begin_layout Enumerate
\begin_inset ERT
status open

\begin_layout Plain Layout

[4.39]
\end_layout

\end_inset

Let 
\begin_inset Formula $\mathbf{X}=\left(X_{1},\dots,X_{n}\right)\sim\text{Multi}\left(p_{1},\dots,p_{n}\right)$
\end_inset

 then 
\begin_inset Formula 
\begin{align*}
P\left(X_{1}=x_{1},\cdots,X_{n}=x_{n}\right) & =\binom{m}{x_{1},\dots,x_{n}}\prod_{i=1}^{n}p_{i}^{x_{i}}
\end{align*}

\end_inset

WLOG let 
\begin_inset Formula $X_{i}=X_{1}$
\end_inset

 and 
\begin_inset Formula $X_{j}=X_{2}$
\end_inset

 then 
\begin_inset Formula 
\begin{align*}
P\left(X_{1}=a|X_{2}=b\right) & =\frac{P\left(X_{1}=a,X_{2}=b\right)}{P\left(X_{2}=b\right)}
\end{align*}

\end_inset

Piece by piece:
\begin_inset Formula 
\begin{align*}
P\left(X_{1}=a,X_{2}=b\right) & =\sum_{\begin{array}{c}
\left(x_{3},\dots,x_{n}\right)\\
\sum_{j=3}^{n}x_{j}=m-a-b
\end{array}}\binom{m}{a,b,x_{3}\dots,x_{n}}p_{1}^{a}p_{2}^{b}\prod_{i=3}^{n}p_{i}^{x_{i}}\\
 & =p_{1}^{a}p_{2}^{b}\left(1-p_{1}-p_{2}\right)^{m-a-b}\sum_{\begin{array}{c}
\mathbf{x}=\left(x_{3},\dots,x_{n}\right)\\
\left|\mathbf{x}\right|=m-a-b
\end{array}}\frac{m!}{a!b!x_{3}!\cdots x_{n}!}\frac{1}{\left(1-p_{1}-p_{2}\right)^{m-a-b}}\prod_{i=3}^{n}p_{i}^{x_{i}}\\
 & =\frac{p_{1}^{a}p_{2}^{b}}{a!b!}\left(1-p_{1}-p_{2}\right)^{m-a-b}\sum_{\begin{array}{c}
\mathbf{x}=\left(x_{3},\dots,x_{n}\right)\\
\left|\mathbf{x}\right|=m-a-b
\end{array}}\frac{m!\left(m-a-b\right)!}{\left(m-a-b\right)!x_{3}!\cdots x_{n}!}\prod_{i=3}^{n}\left(\frac{p_{i}}{1-p_{1}-p_{2}}\right)^{x_{i}}\\
 & =\frac{m!}{\left(m-a-b\right)!}\frac{p_{1}^{a}p_{2}^{b}}{a!b!}\left(1-p_{1}-p_{2}\right)^{m-a-b}\sum_{\begin{array}{c}
\mathbf{x}=\left(x_{3},\dots,x_{n}\right)\\
\left|\mathbf{x}\right|=m-a-b
\end{array}}\frac{\left(m-a-b\right)!}{x_{3}!\cdots x_{n}!}\prod_{i=3}^{n}p_{i}^{x_{i}}\\
 & =\frac{m!}{\left(m-a-b\right)!}\frac{p_{1}^{a}p_{2}^{b}}{a!b!}\left(1-p_{1}-p_{2}\right)^{m-a-b}=\binom{m}{a,b,m-a-b}p_{1}^{a}p_{2}^{b}\left(1-p_{1}-p_{2}\right)^{m-a-b}
\end{align*}

\end_inset

and
\begin_inset Formula 
\begin{align*}
P\left(X_{2}=b\right) & =\sum_{\begin{array}{c}
\mathbf{x}=\left(x_{1},x_{3},\dots,x_{n}\right)\\
\left|\mathbf{x}\right|=m-b
\end{array}}\binom{m}{x_{1},b,x_{3}\dots,x_{n}}p_{1}^{x_{1}}p_{2}^{b}\prod_{i=3}^{n}p_{i}^{x_{i}}\\
 & =\sum_{\begin{array}{c}
\mathbf{x}=\left(x_{1},x_{3},\dots,x_{n}\right)\\
\left|\mathbf{x}\right|=m-b
\end{array}}\frac{m!}{x_{1}!x_{3}!\cdots x_{n}!}p_{1}^{x_{1}}\prod_{i=3}^{n}p_{i}^{x_{i}}\\
 & =\frac{m!}{\left(m-b\right)!}\frac{p_{2}^{b}}{b!}\left(1-p_{2}\right)^{m-b}\sum_{\begin{array}{c}
\mathbf{x}=\left(x_{1},x_{3},\dots,x_{n}\right)\\
\left|\mathbf{x}\right|=m-b
\end{array}}\frac{\left(m-b\right)!}{x_{1}!x_{3}!\cdots x_{n}!}\left(\frac{p_{1}}{1-p_{2}}\right)^{x_{1}}\prod_{i=3}^{n}\left(\frac{p_{i}}{1-p_{2}}\right)^{x_{i}}\\
 & =\frac{m!}{\left(m-b\right)!}\frac{p_{2}^{b}}{b!}=\binom{m}{b}p_{2}^{b}\left(1-p_{2}\right)^{m-b}
\end{align*}

\end_inset

Therefore 
\begin_inset Formula $X_{2}\sim\text{Binomial}\left(m,p_{2}\right)$
\end_inset

 and by
\begin_inset Formula 
\begin{align*}
P\left(X_{1}=a|X_{2}=b\right) & =\frac{\binom{m}{a,b,m-a-b}p_{1}^{a}p_{2}^{b}\left(1-p_{1}-p_{2}\right)^{m-a-b}}{\binom{m}{b}p_{2}^{b}\left(1-p_{2}\right)^{m-b}}\\
 & =\frac{\frac{m!}{a!b!\left(m-a-b\right)!}p_{1}^{a}\left(1-p_{1}-p_{2}\right)^{m-a-b}}{\frac{m!}{b!\left(m-b\right)!}\left(1-p_{2}\right)^{m-b}}\\
 & =\binom{m-b}{a}\left(\frac{p_{1}}{1-p_{2}}\right)^{a}\frac{\left(1-p_{1}-p_{2}\right)^{m-b-a}}{\left(1-p_{2}\right)^{m-b-a}}\\
 & =\binom{m-b}{a}\left(\frac{p_{1}}{1-p_{2}}\right)^{a}\left(1-\frac{p_{1}}{1-p_{2}}\right)^{m-b-a}
\end{align*}

\end_inset


\begin_inset Formula $X_{1}|X_{2}\sim\text{Binomial}\left(m-b,\frac{p_{1}}{1-p_{2}}\right)$
\end_inset

.
 Then the covariance 
\begin_inset Formula 
\begin{align*}
\text{Cov}\left(X_{i},X_{j}\right) & =E\left(X_{i}X_{j}\right)-E\left(X_{i}\right)E\left(X_{j}\right)\\
 & =E\left(E\left(X_{i}X_{j}|X_{j}\right)\right)-mp_{i}mp_{j}\\
 & =E\left(X_{j}E\left(X_{i}|X_{j}\right)\right)-mp_{i}mp_{j}\\
 & =E\left(X_{j}\left(m-X_{j}\right)\left(\frac{p_{i}}{1-p_{j}}\right)\right)-mp_{i}mp_{j}\\
 & =\left(\frac{p_{i}}{1-p_{j}}\right)E\left(X_{j}\left(m-X_{j}\right)\right)-mp_{i}mp_{j}\\
 & =\left(\frac{p_{i}}{1-p_{j}}\right)\left(mE\left(X_{j}\right)-\left(E\left(X_{j}\right)\right)^{2}-\text{Var}\left(X_{j}\right)\right)-mp_{i}mp_{j}\\
 & =\left(\frac{p_{i}}{1-p_{j}}\right)\left(mm\left(p_{j}\right)-\left(mp_{j}\right)^{2}-mp_{j}\left(1-p_{j}\right)\right)-mp_{i}mp_{j}\\
 & =-mp_{i}p_{j}
\end{align*}

\end_inset


\end_layout

\begin_layout Enumerate
\begin_inset ERT
status open

\begin_layout Plain Layout

[4.40]
\end_layout

\end_inset


\begin_inset Formula $f_{X,Y}\left(x,y\right)=Cx^{a-1}y^{b-1}\left(1-x-y\right)^{c-1}$
\end_inset

 on 
\begin_inset Formula $0<x<1$
\end_inset

,
\begin_inset Formula $0<y<1$
\end_inset

,
\begin_inset Formula $0<y<1-x<1$
\end_inset

.
\end_layout

\begin_deeper
\begin_layout Enumerate
By 
\begin_inset Formula $\frac{1-x-y}{1-y}=1-\frac{x}{1-y}$
\end_inset

 we have 
\begin_inset Formula 
\begin{align*}
1= & \int_{0}^{1}\int_{0}^{1-y}\left(Cx^{a-1}y^{b-1}\left(1-x-y\right)^{c-1}\right)dxdy\\
 & =C\int_{0}^{1}\int_{0}^{1-y}\left(x^{a-1}y^{b-1}\left(1-y\right)^{c-1}\left(\frac{1-x-y}{1-y}\right)^{c-1}\right)dxdy\\
 & =C\int_{0}^{1}\int_{0}^{1-y}\left(x^{a-1}y^{b-1}\left(1-y\right)^{c-1}\left(1-\frac{x}{1-y}\right)^{c-1}\right)dxdy\\
 & \text{let }u=\frac{x}{1-y},x=u\left(1-y\right),dx=\left(1-y\right)du\\
 & =C\int_{0}^{1}\int_{0}^{1}\left(\left(u\left(1-y\right)\right)^{a-1}y^{b-1}\left(1-y\right)^{c-1}\left(1-u\right)^{c-1}\right)\left(1-y\right)dudy\\
 & =C\int_{0}^{1}\left(\left(1-y\right)^{a+c-1}y^{b-1}\int_{0}^{1}\left(u^{a-1}\left(1-u\right)^{c-1}\right)du\right)dy\\
 & =C\int_{0}^{1}\left(\left(1-y\right)^{a+c-1}y^{b-1}\frac{\Gamma\left(a\right)\Gamma\left(c\right)}{\Gamma\left(a+c\right)}\right)dy\\
 & =C\frac{\Gamma\left(a\right)\Gamma\left(c\right)}{\Gamma\left(a+c\right)}\int_{0}^{1}\left(y^{b-1}\left(1-y\right)^{a+c-1}\right)dy\\
 & =C\frac{\Gamma\left(a\right)\Gamma\left(c\right)}{\Gamma\left(a+c\right)}\frac{\Gamma\left(b\right)\Gamma\left(a+c\right)}{\Gamma\left(a+b+c\right)}
\end{align*}

\end_inset

Hence 
\begin_inset Formula $C=\frac{\Gamma\left(a+b+c\right)}{\Gamma\left(a\right)\Gamma\left(b\right)\Gamma\left(c\right)}$
\end_inset


\end_layout

\begin_layout Enumerate
Doing essentially the same integration again:
\begin_inset Formula 
\begin{align*}
f_{Y}\left(y\right) & =\int_{0}^{1-y}\left(Cx^{a-1}y^{b-1}\left(1-x-y\right)^{c-1}\right)dx\\
 & =\frac{\Gamma\left(a+b+c\right)}{\Gamma\left(b\right)\Gamma\left(a+c\right)}\left(1-y\right)^{a+c-1}y^{b-1}
\end{align*}

\end_inset

and
\begin_inset Formula 
\begin{align*}
f_{X}\left(x\right) & =\int_{0}^{1-x}\left(Cx^{a-1}y^{b-1}\left(1-x-y\right)^{c-1}\right)dy\\
 & \text{let }u=\frac{y}{1-x},y=u\left(1-x\right),dy=\left(1-x\right)du\\
 & =Cx^{a-1}\left(1-x\right)^{b+c-1}\int_{0}^{1}\left(u^{b-1}\left(1-u\right)^{c-1}\right)du\\
 & =\frac{\Gamma\left(a+b+c\right)}{\Gamma\left(a\right)\Gamma\left(b+c\right)}x^{a-1}\left(1-x\right)^{b+c-1}
\end{align*}

\end_inset


\end_layout

\begin_layout Enumerate
\begin_inset ERT
status open

\begin_layout Plain Layout

\end_layout

\end_inset


\begin_inset Formula 
\begin{align*}
f_{Y|X}\left(y|x\right) & =\frac{\frac{\Gamma\left(a+b+c\right)}{\Gamma\left(a\right)\Gamma\left(b\right)\Gamma\left(c\right)}}{\frac{\Gamma\left(a+b+c\right)}{\Gamma\left(a\right)\Gamma\left(b+c\right)}}\frac{x^{a-1}y^{b-1}\left(1-x-y\right)^{c-1}}{x^{a-1}\left(1-x\right)^{b+c-1}}\\
 & =\frac{\Gamma\left(b+c\right)}{\Gamma\left(b\right)\Gamma\left(c\right)}\left(1-x\right)\frac{y^{b-1}}{\left(1-x\right)^{b-1}}\left(1-\frac{y}{1-x}\right)^{c-1}\\
 & =\left(1-x\right)\frac{\Gamma\left(b+c\right)}{\Gamma\left(b\right)\Gamma\left(c\right)}\left(\frac{y}{1-x}\right)^{b-1}\left(1-\frac{y}{1-x}\right)^{c-1}
\end{align*}

\end_inset

and hence 
\begin_inset Formula $Y/\left(1-x\right)\sim\text{Beta}\left(b,c\right)$
\end_inset

.
\end_layout

\begin_layout Enumerate
The expectation
\begin_inset Formula 
\begin{align*}
E\left(XY\right) & =\int_{0}^{1}\int_{0}^{1-y}xy\left(Cx^{a-1}y^{b-1}\left(1-x-y\right)^{c-1}\right)dxdy\\
 & =C\int_{0}^{1}\int_{0}^{1-y}\left(x^{\left(a+1\right)-1}y^{\left(b+1\right)-1}\left(1-x-y\right)^{c-1}\right)dxdy\\
 & =\frac{\Gamma\left(a+b+c\right)}{\Gamma\left(a\right)\Gamma\left(b\right)\Gamma\left(c\right)}\frac{\Gamma\left(a+1\right)\Gamma\left(b+1\right)\Gamma\left(c\right)}{\Gamma\left(a+b+c+2\right)}\\
 & =\frac{ab}{\left(a+b+c+1\right)\left(a+b+c\right)\Gamma\left(a+b+c\right)}
\end{align*}

\end_inset

and variance
\begin_inset Formula 
\[
\text{Var}\left(XY\right)=E\left(\left(XY\right)^{2}\right)-\left(E\left(XY\right)\right)^{2}
\]

\end_inset

where
\begin_inset Formula 
\begin{align*}
E\left(X^{2}Y^{2}\right) & =\int_{0}^{1}\int_{0}^{1-y}x^{2}y^{2}\left(Cx^{a-1}y^{b-1}\left(1-x-y\right)^{c-1}\right)dxdy\\
 & =C\int_{0}^{1}\int_{0}^{1-y}\left(x^{\left(a+2\right)-1}y^{\left(b+2\right)-1}\left(1-x-y\right)^{c-1}\right)dxdy\\
 & =\frac{\Gamma\left(a+b+c\right)}{\Gamma\left(a\right)\Gamma\left(b\right)\Gamma\left(c\right)}\frac{\Gamma\left(a+2\right)\Gamma\left(b+2\right)\Gamma\left(c\right)}{\Gamma\left(a+b+c+4\right)}\\
 & =\frac{ab\left(a+1\right)\left(b+1\right)}{\left(a+b+c+3\right)\left(a+b+c+2\right)\left(a+b+c+1\right)\Gamma\left(a+b+c\right)}
\end{align*}

\end_inset

and so
\begin_inset Formula 
\begin{align*}
\text{Var}\left(XY\right) & =\frac{ab\left(a+1\right)\left(b+1\right)}{\left(a+b+c+3\right)\left(a+b+c+2\right)\left(a+b+c+1\right)\Gamma\left(a+b+c\right)}\\
 & -\left(\frac{ab}{\left(a+b+c+1\right)\left(a+b+c\right)\Gamma\left(a+b+c\right)}\right)^{2}\\
\end{align*}

\end_inset

The covariance is 
\begin_inset Formula 
\[
\text{Cov}\left(X,Y\right)=\frac{ab}{\left(a+b+c+1\right)\left(a+b+c\right)\Gamma\left(a+b+c\right)}-\left(a\left(b+c\right)\right)\left(b\left(a+c\right)\right)
\]

\end_inset


\end_layout

\end_deeper
\begin_layout Enumerate
\begin_inset ERT
status open

