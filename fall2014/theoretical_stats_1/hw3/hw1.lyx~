\begin_deeper
\begin_layout Enumerate
\begin_inset Formula $f_{X}>0$
\end_inset

 since 
\begin_inset Formula $p<1$
\end_inset

 and therefore 
\begin_inset Formula $\log(p)<0$
\end_inset

.
 Furthermore 
\begin_inset Formula 
\begin{align*}
\sum_{x=1}^{\infty}\frac{-(1-p)^{x}}{x\log(p)} & =\frac{1}{\log(p)}\sum_{x=1}^{\infty}\frac{-(1-p)^{x}}{x}\\
 & =\frac{1}{\log(p)}\log(1-(1-p))\\
 & =1
\end{align*}

\end_inset


\end_layout

\begin_layout Enumerate
\begin_inset ERT
status open

\begin_layout Plain Layout

\end_layout

\end_inset


\begin_inset Formula 
\begin{align*}
E(X) & =\frac{1}{\log(p)}\sum_{x=1}^{\infty}x\frac{-(1-p)^{x}}{x}\\
 & =\frac{-1}{\log(p)}\sum_{x=1}^{\infty}(1-p)^{x}\\
 & =\frac{-1}{\log(p)}\frac{1-p}{1-(1-p)}\\
 & =\frac{p-1}{p\log(p)}
\end{align*}

\end_inset

Then
\begin_inset Formula 
\begin{align*}
E(X^{2}) & =\frac{1}{\log(p)}\sum_{x=1}^{\infty}x^{2}\frac{-(1-p)^{x}}{x}\\
 & =\frac{-1}{\log(p)}\sum_{x=1}^{\infty}x(1-p)^{x}
\end{align*}

\end_inset

Now since 
\begin_inset Formula $\sum(1-p)^{x}$
\end_inset

 absolutely converges to 
\begin_inset Formula $(1-p)/p$
\end_inset

 we can differentiate under the sum
\begin_inset Formula 
\begin{align*}
\frac{d}{dp}\frac{1-p}{p} & =\frac{\partial}{\partial p}\sum_{x=1}^{\infty}(1-p)^{x}\\
\frac{p-1}{p^{2}}-\frac{1}{p} & =\sum_{x=1}^{\infty}\frac{\partial}{\partial p}(1-p)^{x}\\
 & =\sum_{x=1}^{\infty}x(1-p)^{x-1}\\
 & =\frac{1}{1-p}\sum_{x=1}^{\infty}x(1-p)^{x}\implies\\
\frac{(1-p)(p-1)}{p^{2}}-\frac{1-p}{p} & =\sum_{x=1}^{\infty}x(1-p)^{x}
\end{align*}

\end_inset

and therefore
\begin_inset Formula 
\begin{align*}
E(X^{2}) & =\frac{-1}{\log(p)}\left(\frac{(1-p)(p-1)}{p^{2}}-\frac{1-p}{p}\right)\\
 & =\frac{1-p}{p^{2}\log(p)}
\end{align*}

\end_inset

and finally 
\begin_inset Formula 
\[
\text{Var}(X)=\frac{1-p}{p^{2}\log(p)}-\left(\frac{p-1}{p\log(p)}\right)^{2}=\frac{\log(1-p)-(p-1)^{2}}{p^{2}\log^{2}(p)}
\]

\end_inset


\end_layout

\end_deeper
\begin_layout Enumerate
\begin_inset ERT
status open

\begin_layout Plain Layout

[3.19]
\end_layout

\end_inset


\begin_inset Formula $e^{-z}=\sum_{k=0}^{\infty}(-z)^{k}/k!$
\end_inset

 and 
\begin_inset Formula $Z\sim\Gamma(\alpha,1)\implies P(Z=z)=\frac{1}{\Gamma(\alpha)}z^{\alpha-1}e^{-z}$
\end_inset

.
 Therefore
\begin_inset Formula 
\begin{align*}
\int_{x}^{\infty}\frac{1}{\Gamma(\alpha)}z^{\alpha-1}e^{-z}dz & =1-\int_{0}^{x}\frac{1}{\Gamma(\alpha)}z^{\alpha-1}e^{-z}dz\\
 & =1-\frac{1}{\Gamma(\alpha)}\int_{0}^{x}z^{\alpha-1}\sum_{k=0}^{\infty}\frac{(-z)^{k}}{k!}dz\\
 & =1-\frac{1}{\Gamma(\alpha)}\int_{0}^{x}\sum_{k=0}^{\infty}\frac{(-1)^{k}z^{k+\alpha-1}}{k!}dz\\
 & \text{ and since }\sum_{k=0}^{\infty}\frac{(-1)^{k}z^{k+\alpha-1}}{k!}\text{ converges uniformly and }z\text{ is continuous for all }k\\
 & =1-\frac{1}{\Gamma(\alpha)}\sum_{k=0}^{\infty}\frac{(-1)^{k}}{k!}\int_{0}^{x}z^{k+\alpha-1}dz\\
 & =1-\frac{1}{\Gamma(\alpha)}\sum_{k=0}^{\infty}\frac{(-1)^{k}}{k!(k+\alpha)}x^{k+\alpha}\\
 & =1-\frac{x^{\alpha}}{\Gamma(\alpha)}\sum_{k=0}^{\infty}\frac{(-x)^{k}}{k!}\frac{1}{(k+\alpha)}
\end{align*}

\end_inset


\end_layout

