\begin_deeper
\begin_layout Enumerate
\begin_inset Formula $U=XY$
\end_inset

 and 
\begin_inset Formula $V=Y$
\end_inset

 implies that 
\begin_inset Formula $0<v<1$
\end_inset

 and 
\begin_inset Formula $0<u=x\cdot v<v$
\end_inset

 since 
\begin_inset Formula $0<x<1$
\end_inset

.
 Therefore 
\begin_inset Formula $0<u<v<1$
\end_inset

.
 Also 
\begin_inset Formula $U=XY$
\end_inset

 and 
\begin_inset Formula $V=Y$
\end_inset

 implies 
\begin_inset Formula $X=U/V$
\end_inset

 hence
\begin_inset Formula 
\[
\left\Vert J\right\Vert =\left\Vert \left|\left(\begin{array}{cc}
\frac{1}{v} & -\frac{u}{v^{2}}\\
0 & 1
\end{array}\right)\right|\right\Vert =\left\Vert \frac{1}{v}-0\right\Vert =\frac{1}{v}
\]

\end_inset

and therefore
\begin_inset Formula 
\begin{align*}
f_{U,V}(u,v) & =\frac{\Gamma\left(\alpha+\beta\right)}{\Gamma\left(\alpha\right)\Gamma\left(\beta\right)}\left(\frac{u}{v}\right)^{\alpha-1}\left(1-\frac{u}{v}\right)^{\beta-1}\frac{\Gamma\left(\alpha+\beta+\gamma\right)}{\Gamma\left(\alpha+\beta\right)\Gamma\left(\gamma\right)}v^{\alpha+\beta-1}\left(1-v\right)^{\gamma-1}\frac{1}{v}I_{\{0<u<v<1\}}(u,v)\\
 & =\frac{\Gamma\left(\alpha+\beta+\gamma\right)}{\Gamma\left(\alpha\right)\Gamma\left(\beta\right)\Gamma\left(\gamma\right)}\left(\frac{u}{v}\right)^{\alpha-1}\left(1-\frac{u}{v}\right)^{\beta-1}v^{\alpha+\beta-1}\left(1-v\right)^{\gamma-1}\frac{1}{v}I_{\{0<u<v<1\}}(u,v)\\
 & \text{let }\Gamma=\frac{\Gamma\left(\alpha+\beta+\gamma\right)}{\Gamma\left(\alpha\right)\Gamma\left(\beta\right)\Gamma\left(\gamma\right)}\\
 & =\Gamma\left(\frac{u}{v}\right)^{\alpha-1}\left(1-\frac{u}{v}\right)^{\beta-1}v^{\alpha+\beta-1}\left(1-v\right)^{\gamma-1}\frac{1}{v}I_{\{0<u<v<1\}}(u,v)\\
 & =\Gamma u^{\alpha-1}\left(1-\frac{u}{v}\right)^{\beta-1}v^{\beta}\left(1-v\right)^{\gamma-1}\frac{1}{v}I_{\{0<u<v<1\}}(u,v)\\
 & =\Gamma u^{\alpha-1}\left(v-u\right)^{\beta-1}\left(1-v\right)^{\gamma-1}I_{\{0<u<v<1\}}(u,v)
\end{align*}

\end_inset

Then 
\begin_inset Formula 
\begin{align*}
f_{U}(u) & =\Gamma u^{\alpha-1}\int_{u}^{1}\left(v-u\right)^{\beta-1}\left(1-v\right)^{\gamma-1}dv\\
 & \text{let }y=\frac{v-u}{1-u}\text{ then }1-y=\frac{1-v}{1-u}\text{ and }dy=\frac{dv}{1-u}\\
 & =\Gamma u^{\alpha-1}\left(1-u\right)^{\left(\beta-1\right)+\left(\gamma-1\right)+1}\int_{u}^{1}\left(\frac{v-u}{1-u}\right)^{\beta-1}\left(\frac{1-v}{1-u}\right)^{\gamma-1}\frac{dv}{1-u}\\
 & =\Gamma u^{\alpha-1}\left(1-u\right)^{\left(\beta-1\right)+\left(\gamma-1\right)+1}\int_{0}^{1}y^{\beta-1}\left(1-y\right)^{\gamma-1}dy\\
 & =\Gamma u^{\alpha-1}\left(1-u\right)^{\beta+\gamma-1}\frac{\Gamma\left(\beta\right)\Gamma\left(\gamma\right)}{\Gamma\left(\beta+\gamma\right)}\\
 & =\frac{\Gamma\left(\alpha+\beta+\gamma\right)}{\Gamma\left(\alpha\right)\Gamma\left(\beta\right)\Gamma\left(\gamma\right)}u^{\alpha-1}\left(1-u\right)^{\beta+\gamma-1}\frac{\Gamma\left(\beta\right)\Gamma\left(\gamma\right)}{\Gamma\left(\beta+\gamma\right)}\\
 & =\frac{\Gamma\left(\alpha+\beta+\gamma\right)}{\Gamma\left(\alpha\right)\Gamma\left(\beta+\gamma\right)}u^{\alpha-1}\left(1-u\right)^{\beta+\gamma-1}
\end{align*}

\end_inset

Therefore 
\begin_inset Formula $U\sim\text{beta}(\alpha,\beta+\gamma)$
\end_inset

.
\end_layout

\begin_layout Enumerate
