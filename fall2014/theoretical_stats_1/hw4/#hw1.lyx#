If 
\begin_inset Formula $f(x)$
\end_inset

 is symmetric about 
\begin_inset Formula $x=0$
\end_inset

 then 
\begin_inset Formula $g(x)=(1/\sigma)f\left(\left(x-\mu\right)/\sigma\right)$
\end_inset

 is symmetric about 
\begin_inset Formula $x=\mu$
\end_inset

, since
\begin_inset Formula 
\begin{align*}
g(\mu-\epsilon) & =\frac{1}{\sigma}f\left(\frac{\left(\mu-\epsilon\right)-\mu}{\sigma}\right)\\
 & =\frac{1}{\sigma}f\left(\frac{\mu}{\sigma}-\frac{\epsilon}{\sigma}-\frac{\mu}{\sigma}\right)=\frac{1}{\sigma}f\left(-\frac{\epsilon}{\sigma}\right)=\frac{1}{\sigma}f\left(\frac{\epsilon}{\sigma}\right)=\frac{1}{\sigma}f\left(\frac{\left(\mu+\epsilon\right)-\mu}{\sigma}\right)=g(\mu+\epsilon)
\end{align*}

\end_inset

Therefore 
\begin_inset Formula 
\begin{align*}
1=\int_{-\infty}^{\infty}g(x)dx & =\int_{-\infty}^{\mu}g(x)dx+\int_{\mu}^{\infty}g(x)dx\\
 & \text{let }x'=\mu-x\text{ in the second integral}\\
 & =\int_{-\infty}^{\mu}g(x)dx-\int_{0}^{-\infty}g(\mu-x')dx'\\
 & =\int_{-\infty}^{\mu}g(x)dx+\int_{-\infty}^{0}g(\mu-x')dx'\\
 & \text{by symmetry}g(\mu-x')=g(\mu+x')\\
 & =\int_{-\infty}^{\mu}g(x)dx+\int_{-\infty}^{0}g(\mu+x')dx'\\
 & \text{let }x=\mu+x'\text{ in the second integral}\\
 & =\int_{-\infty}^{\mu}g(x)dx+\int_{-\infty}^{\mu}g(x)dx\\
 & =2\int_{-\infty}^{\mu}g(x)dx
\end{align*}

\end_inset

Hence 
\begin_inset Formula $2\int_{-\infty}^{\mu}g(x)dx=1/2$
\end_inset

 and so 
\begin_inset Formula $\mu$
\end_inset

 is the median.
\end_layout

\begin_layout Enumerate
\begin_inset ERT
status open

\begin_layout Plain Layout

[3.38]
\end_layout

\end_inset

Let 
\begin_inset Formula $\alpha=P\left(Z>z_{\alpha}\right)=\int_{z_{\alpha}}^{\infty}f(z)dz$
\end_inset

 and 
\begin_inset Formula $g(x)=(1/\sigma)f\left(\left(x-\mu\right)/\sigma\right)$
\end_inset

.
 Then
\begin_inset Formula 
\begin{align*}
P\left(X>x_{\alpha}\right) & =\int_{x_{\alpha}}^{\infty}g(x)dx\\
 & =\int_{\sigma z_{\alpha}+\mu}^{\infty}\frac{1}{\sigma}f\left(\frac{x-\mu}{\sigma}\right)dx\\
 & \text{let }z=(x-\mu)/\sigma\\
 & =\int_{z_{\alpha}}^{\infty}f\left(z\right)dz\\
 & =\alpha
\end{align*}

\end_inset


\end_layout

\begin_layout Enumerate
\begin_inset ERT
status open

\begin_layout Plain Layout

[3.41]
\end_layout

\end_inset


\begin_inset Formula $X\preceq Y$
\end_inset

 in stochastic ordering iff 
\begin_inset Formula $F_{Y}(t)\leq F_{X}(t)$
\end_inset

 for all 
\begin_inset Formula $-\infty<t<\infty$
\end_inset

 and 
\begin_inset Formula $F_{Y}(t)<F_{X}(t)$
\end_inset

 for some 
\begin_inset Formula $t$
\end_inset

.
\end_layout

\begin_deeper
\begin_layout Enumerate
For 
\begin_inset Formula $X\sim\mathcal{N}\left(\mu_{1},\sigma^{2}\right)$
\end_inset

 and 
\begin_inset Formula $Y\sim\mathcal{N}\left(\mu_{2},\sigma^{2}\right)$
\end_inset

 with 
\begin_inset Formula $\mu_{1}<\mu_{2}$
\end_inset

 
\begin_inset Formula 
\begin{align*}
F_{X}(t)-F_{Y}(t) & =\frac{1}{\sigma\sqrt{2\pi}}\left(\int_{-\infty}^{t}e^{-\frac{\left(x-\mu_{1}\right)^{2}}{2\sigma^{2}}}dx-\int_{-\infty}^{t}e^{-\frac{\left(y-\mu_{2}\right)^{2}}{2\sigma^{2}}}dy\right)\\
 & \text{let }z=y-\mu_{2}\text{ in the second integral and }z=x-\mu_{1}\text{ in the first}\\
 & =\frac{1}{\sigma\sqrt{2\pi}}\left(\int_{-\infty}^{t-\mu_{1}}e^{-\frac{z^{2}}{2\sigma^{2}}}dz-\int_{-\infty}^{t-\mu_{2}}e^{-\frac{z^{2}}{2\sigma^{2}}}dz\right)\\
 & \mu_{1}<\mu_{2}\implies t-\mu_{1}>t-\mu_{2}\\
 & =\frac{1}{\sigma\sqrt{2\pi}}\left(\int_{t-\mu_{2}}^{t-\mu_{1}}e^{-\frac{z^{2}}{2\sigma^{2}}}dz\right)>0
\end{align*}

\end_inset

since 
\begin_inset Formula $e^{-\frac{z^{2}}{2\sigma^{2}}}>0$
\end_inset

.
 Therefore 
\begin_inset Formula $F_{X}(t)>F_{Y}(t)$
\end_inset

 for all 
\begin_inset Formula $t$
\end_inset

.
\end_layout

\begin_layout Enumerate
For 
\begin_inset Formula $X\sim\Gamma\left(\alpha,\beta_{1}\right)$
\end_inset

 and 
\begin_inset Formula $Y\sim\Gamma\left(\alpha,\beta_{2}\right)$
\end_inset

 with 
\begin_inset Formula $\beta_{1}<\beta_{2}$
\end_inset

 
\begin_inset Formula 
\begin{align*}
F_{X}(t)-F_{Y}(t) & =\frac{1}{\Gamma\left(\alpha\right)}\left(\int_{0}^{t}\frac{x^{\alpha-1}}{\left(\beta_{1}\right)^{\alpha}}e^{-x/\beta_{1}}dx-\int_{0}^{t}\frac{y^{\alpha-1}}{\left(\beta_{2}\right)^{\alpha}}e^{-y/\beta_{2}}dy\right)\\
 & \text{let }z=y/\beta_{2}\text{ in the second integral and }z=x/\beta_{1}\text{ in the first}\\
 & =\frac{1}{\Gamma\left(\alpha\right)}\left(\int_{0}^{t/\beta_{1}}z^{\alpha-1}e^{-z}dz-\int_{0}^{t/\beta_{2}}z^{\alpha-1}e^{-z}dz\right)\\
 & \beta_{1}<\beta_{2}\implies\frac{t}{\beta_{1}}>\frac{t}{\beta_{2}}\\
 & =\frac{1}{\Gamma\left(\alpha\right)}\left(\int_{t/\beta_{2}}^{t/\beta_{1}}z^{\alpha-1}e^{-z}dz\right)>0
\end{align*}

\end_inset

since 
\begin_inset Formula $z^{\alpha-1}e^{-z}>0$
\end_inset

 for 
\begin_inset Formula $z>0$
\end_inset

.
 Therefore 
\begin_inset Formula $F_{X}(t)>F_{Y}(t)$
\end_inset

 for all 
\begin_inset Formula $t$
\end_inset

.
\end_layout

\end_deeper
\begin_layout Enumerate
\begin_inset ERT
status open

\begin_layout Plain Layout

[3.42]
\end_layout

\end_inset


\begin_inset Formula $X\preceq Y$
\end_inset

 in stochastic ordering iff 
\begin_inset Formula $F_{Y}(t)\leq F_{X}(t)$
\end_inset

 for all 
\begin_inset Formula $-\infty<t<\infty$
\end_inset

 and 
\begin_inset Formula $F_{Y}(t)<F_{X}(t)$
\end_inset

 for some 
\begin_inset Formula $t$
\end_inset

.
 Let 
\begin_inset Formula $F_{Z|\mu_{j}}$
\end_inset

 denote the CDF of the fundamental distribution 
\begin_inset Formula $Z\sim F_{Z}(z)$
\end_inset

 shifted by 
\begin_inset Formula $-\mu_{j}$
\end_inset

.
\end_layout

\begin_deeper
\begin_layout Enumerate
For 
\begin_inset Formula $X\sim F_{X}\left(x|\mu_{1}\right)$
\end_inset

 and 
\begin_inset Formula $X\sim F_{X}\left(x|\mu_{2}\right)$
\end_inset

 with 
\begin_inset Formula $\mu_{1}<\mu_{2}$
\end_inset

 
\begin_inset Formula 
\begin{align*}
F_{X|\mu_{1}}\left(t\right)-F_{Y|\mu_{2}}\left(t\right) & =F_{X}\left(t-\mu_{1}\right)-F_{X}\left(t-\mu_{2}\right)\\
 & =\int_{t-\mu_{2}}^{t-\mu_{1}}f_{Z}(t)dt>0
\end{align*}

\end_inset

since 
\begin_inset Formula $f_{Z}(z)>0.$
\end_inset

 Therefore 
\family roman
\series medium
\shape up
\size normal
\emph off
\bar no
\strikeout off
\uuline off
\uwave off
\noun off
\color none

\begin_inset Formula $F_{X|\mu_{1}}\left(t\right)-F_{Y|\mu_{2}}\left(t\right)>0$
\end_inset

 for all 
\begin_inset Formula $t$
\end_inset

.
\end_layout

\begin_layout Enumerate
Let 
\begin_inset Formula $X\sim F_{X}\left(x|\sigma_{1}\right)$
\end_inset

 and 
\begin_inset Formula $Y\sim F_{Y}\left(y|\sigma_{2}\right)$
\end_inset

 with 
\begin_inset Formula $\sigma_{1}<\sigma_{2}$
\end_inset

 with 
\begin_inset Formula $\sigma_{i}$
\end_inset

 being a scale parameter, and assume that 
\begin_inset Formula $0<X,Y<\infty$
\end_inset

.
 Then 
\begin_inset Formula 
\begin{align*}
F_{X|\sigma_{1}}\left(t\right)-F_{Y|\sigma_{2}}\left(t\right) & =F_{X}\left(t/\sigma_{1}\right)-F_{X}\left(t/\sigma_{2}\right)\\
 & \sigma_{1}<\sigma_{2}\text{ and }t>0\implies\frac{t}{\sigma_{1}}>\frac{t}{\sigma_{2}}\\
 & =\int_{\frac{t}{\sigma_{2}}}^{\frac{t}{\sigma_{1}}}f_{Z}(t)dt>0
\end{align*}

\end_inset

since 
\begin_inset Formula $f_{Z}(z)>0.$
\end_inset

 Therefore 
\family roman
\series medium
\shape up
\size normal
\emph off
\bar no
\strikeout off
\uuline off
\uwave off
\noun off
\color none

\begin_inset Formula $F_{X|\sigma_{1}}\left(t\right)-F_{Y|\sigma_{2}}\left(t\right)>0$
\end_inset

 for all 
\begin_inset Formula $t$
\end_inset

.
\end_layout

\end_deeper
