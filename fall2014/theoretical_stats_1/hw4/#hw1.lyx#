\end_inset


\begin_inset Formula 
\begin{align*}
E\left(ag_{1}\left(X,Y\right)+bg_{2}\left(X,Y\right)+c\right) & =\int_{-\infty}^{\infty}\int_{-\infty}^{\infty}\left(ag_{1}\left(x,y\right)+bg_{2}\left(x,y\right)+c\right)f_{X,Y}(x,y)dxdy\\
 & =\int_{-\infty}^{\infty}\int_{-\infty}^{\infty}ag_{1}\left(x,y\right)f_{X,Y}(x,y)dxdy+\\
 & \int_{-\infty}^{\infty}\int_{-\infty}^{\infty}bg_{2}\left(x,y\right)f_{X,Y}(x,y)dxdy+\int_{-\infty}^{\infty}\int_{-\infty}^{\infty}cf_{X,Y}(x,y)dxdy\\
 & =a\int_{-\infty}^{\infty}\int_{-\infty}^{\infty}g_{1}\left(x,y\right)f_{X,Y}(x,y)dxdy\\
 & +b\int_{-\infty}^{\infty}\int_{-\infty}^{\infty}g_{2}\left(x,y\right)f_{X,Y}(x,y)dxdy+c\int_{-\infty}^{\infty}\int_{-\infty}^{\infty}f_{X,Y}(x,y)dxdy\\
 & =aE\left(g_{1}\left(X,Y\right)\right)+bE\left(g_{2}\left(X,Y\right)\right)+c\cdot1
\end{align*}

\end_inset


\end_layout

\begin_layout Enumerate
\begin_inset ERT
status open

\begin_layout Plain Layout

\end_layout

\end_inset


\begin_inset Formula 
\begin{align*}
E\left(g\left(X,Y\right)\right) & =\int_{-\infty}^{\infty}\int_{-\infty}^{\infty}g\left(x,y\right)f_{X,Y}(x,y)dxdy
\end{align*}

\end_inset

Now since by assumption 
\begin_inset Formula $g(x,y)\geq0$
\end_inset

 and by definition 
\begin_inset Formula $f_{X,Y}(x,y)\geq0$
\end_inset

 it's the case that 
\begin_inset Formula $g(x,y)\cdot f_{X,Y}(x,y)\geq0$
\end_inset

 and therefore
\begin_inset Formula 
\[
E\left(g(x,y)\right)\geq\int_{-\infty}^{\infty}\int_{-\infty}^{\infty}\left(0\right)dxdy=0
\]

\end_inset


\end_layout

\begin_layout Enumerate
If 
\family roman
\series medium
\shape up
\size normal
\emph off
\bar no
\strikeout off
\uuline off
\uwave off
\noun off
\color none

\begin_inset Formula $g_{1}\left(X,Y\right)\geq g_{2}\left(X,Y\right)$
\end_inset

 then 
\begin_inset Formula $g_{1}\left(X,Y\right)-g_{2}\left(X,Y\right)\geq0$
\end_inset

 and by part (a) and (b) 
\begin_inset Formula 
\[
0\leq E\left(g_{1}\left(X,Y\right)-g_{2}\left(X,Y\right)\right)=E\left(g_{1}\left(X,Y\right)\right)-E\left(g_{2}\left(X,Y\right)\right)
\]

\end_inset

Therefore 
\begin_inset Formula $E\left(g_{1}\left(X,Y\right)\right)\geq E\left(g_{2}\left(X,Y\right)\right)$
\end_inset

.
\end_layout

