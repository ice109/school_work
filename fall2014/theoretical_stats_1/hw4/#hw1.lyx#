\begin_inset Formula $\text{Var}(X)=E\left(\text{Var}\left(X|Y\right)\right)+\text{Var}\left(E\left(X|Y\right)\right)$
\end_inset

 and 
\begin_inset Formula $E\left(X\right)=E\left(E\left(X|Y\right)\right)$
\end_inset

 
\end_layout

\begin_deeper
\begin_layout Enumerate
Hence
\begin_inset Formula 
\begin{align*}
E\left(Y\right) & =E\left(E\left(Y|X\right)\right)\\
 & =E\left(X\right)\\
 & =\frac{1}{2}
\end{align*}

\end_inset

and
\begin_inset Formula 
\begin{align*}
\text{Var}(Y) & =E\left(\text{Var}\left(Y|X\right)\right)+\text{Var}\left(E\left(Y|X\right)\right)\\
 & =E\left(X^{2}\right)+\text{Var}\left(X\right)\\
 & =\frac{1^{2}+1\cdot0+0^{2}}{3}+\frac{1}{12}(1-0)^{2}\\
 & =\frac{5}{12}
\end{align*}

\end_inset

and since 
\begin_inset Formula $E\left(XY\right)=E\left(E\left(XY|X\right)\right)=E\left(X\cdot E\left(Y|X\right)\right)$
\end_inset


\begin_inset Formula 
\begin{align*}
\text{Cov}(X,Y) & =E\left(XY\right)-\mu_{X}\mu_{Y}\\
 & =E\left(X\cdot E\left(Y|X\right)\right)-\frac{1}{2}\cdot\frac{1}{2}\\
 & =E\left(X\cdot X\right)-\frac{1}{2}\cdot\frac{1}{2}\\
 & =\frac{1}{3}-\frac{1}{4}=\frac{1}{12}
\end{align*}

\end_inset


\end_layout

