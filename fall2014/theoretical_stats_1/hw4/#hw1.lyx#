\begin_inset Formula 
\begin{align*}
h_{T}(t) & =\underset{\delta\rightarrow0}{\lim}\frac{P(t\leq T\leq t+\delta|T\geq t)}{\delta}\\
 & =\underset{\delta\rightarrow0}{\lim}\frac{1}{\delta}\frac{P(\left(t\leq T\leq t+\delta\right)\cap T\geq t)}{P(T\geq t)}\\
 & =\frac{1}{1-F_{T}(t)}\left(\underset{\delta\rightarrow0}{\lim}\frac{F_{T}(t+\delta)-F_{T}(t)}{\delta}\right)\\
 & \text{by F.T.C.}\\
 & =\frac{1}{1-F_{T}(t)}\left(f_{T}(t)\right)
\end{align*}

\end_inset

Then
\begin_inset Formula 
\begin{align*}
-\frac{d}{dt}\log\left(1-F_{T}(t)\right) & =-\frac{1}{1-F_{T}(t)}\frac{d}{dt}\left(1-F_{T}(t)\right)=-\frac{1}{1-F_{T}(t)}\left(-f_{T}(t)\right)=\frac{f_{T}(t)}{1-F_{T}(t)}
\end{align*}

\end_inset


\end_layout

\begin_layout Enumerate
\begin_inset ERT
status open

\begin_layout Plain Layout

[3.26]
\end_layout

\end_inset


\end_layout

\begin_deeper
\begin_layout Enumerate
\begin_inset Formula $T\sim\text{exponential}(\beta)$
\end_inset

 then 
\begin_inset Formula $f_{T}(t)=\beta e^{-\beta t}$
\end_inset

 and 
\begin_inset Formula $F_{T}(t)=1-e^{-\beta t}$
\end_inset

 and therefore
\begin_inset Formula 
\[
h_{T}(t)=\frac{\beta e^{-\beta t}}{1-\left(1-e^{-\beta t}\right)}=\beta
\]

\end_inset

Note my 
\begin_inset Formula $\beta$
\end_inset

 is the inverse of the book's 
\begin_inset Formula $\beta$
\end_inset

 so the answer is correct.
\end_layout

\begin_layout Enumerate
\begin_inset Formula $T\sim\text{Weibull}(\gamma,\beta)$
\end_inset

 then 
\begin_inset Formula $f_{T}(t)=\frac{\gamma}{\beta}\left(\frac{t}{\beta}\right)^{\gamma-1}e^{-(t/\beta)^{\gamma}}$
\end_inset

 and 
\begin_inset Formula $F_{T}(t)=1-e^{-(t/\beta)^{\gamma}}$
\end_inset

 and therefore
\begin_inset Formula 
\[
h_{T}(t)=\frac{\frac{\gamma}{\beta}\left(\frac{t}{\beta}\right)^{\gamma-1}e^{-(t/\beta)^{\gamma}}}{1-\left(1-e^{-(t/\beta)^{\gamma}}\right)}=\frac{\frac{\gamma}{\beta}\left(\frac{t}{\beta}\right)^{\gamma-1}e^{-(t/\beta)^{\gamma}}}{e^{-(t/\beta)^{\gamma}}}=\frac{\gamma}{\beta}\left(\frac{t}{\beta}\right)^{\gamma-1}
\]

\end_inset


\end_layout

\begin_layout Enumerate
\begin_inset Formula $T\sim\text{logistic}(\mu,\beta)$
\end_inset

 then 
\begin_inset Formula 
\[
f_{T}(t)=\frac{e^{-\frac{x-\mu}{\beta}}}{\beta\left(1+e^{-\frac{x-\mu}{\beta}}\right)^{2}}
\]

\end_inset

 and 
\begin_inset Formula 
\[
F_{T}(t)=\frac{1}{1+e^{-\frac{x-\mu}{\beta}}}
\]

\end_inset

 and therefore
\begin_inset Formula 
\[
h_{T}(t)=\frac{\frac{e^{-\frac{x-\mu}{\beta}}}{\beta\left(1+e^{-\frac{x-\mu}{\beta}}\right)^{2}}}{1-\frac{1}{1+e^{-\frac{x-\mu}{\beta}}}}=\frac{\frac{e^{-\frac{x-\mu}{\beta}}}{\beta\left(1+e^{-\frac{x-\mu}{\beta}}\right)^{2}}}{\frac{1+e^{-\frac{x-\mu}{\beta}}-1}{1+e^{-\frac{x-\mu}{\beta}}}}=\frac{\frac{e^{-\frac{x-\mu}{\beta}}}{\beta\left(1+e^{-\frac{x-\mu}{\beta}}\right)}}{e^{-\frac{x-\mu}{\beta}}}=\frac{1}{\beta\left(1+e^{-\frac{x-\mu}{\beta}}\right)}
\]

\end_inset


\end_layout

\end_deeper
